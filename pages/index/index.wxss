/**index.wxss**/
.container{
  width: 100%;
  height: 100vh;
  background-color: bisque;
  position: relative;
}
.box{
  width: 300rpx;
  height:300rpx;
  position: absolute;
  left: 50%;
  bottom: 100rpx;
  transform: translate(-50%,-50%);
}
.box image:nth-child(1){
  width: 100%;
  height:100%;
}
.box image:nth-child(2){
  position: absolute;
  width: 50%;
  height: 50%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
